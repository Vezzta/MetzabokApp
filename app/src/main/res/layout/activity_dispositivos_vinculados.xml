<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DispositivosVinculados">

    <TextView
            android:text="@string/vinculados"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="16sp" android:textAlignment="center"
            android:background="@color/chapingoPrimaryDark" android:textColor="@color/white"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingStart="20dp"
            android:id="@+id/listDispositivos" android:background="@color/white"/>
</android.support.constraint.ConstraintLayout>